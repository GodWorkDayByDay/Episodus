#ifndef __NSBB_MSG_H#define __NSBB_MSG_H

#define NSDLG_SORTIE_HAUT -4#define NSDLG_SORTIE_BAS  -3
#define NSDLG_RETOUR 	    -1
#define NSDLG_SUITE 	     0

//
// Pour réinitialiser les archétypes
//
#define NSDLGSTATUS_REINIT  -1
#define NSDLGSTATUS_NORMAL   0

//// Entre NSDLG_SUITE et NSDLGRETOUR_DIRECT : accès direct au nième fils
//
#define NSDLGRETOUR_DIRECT  10
#define NSDLGRETOUR_FIN     30
#define NSDLGRETOUR_DEBUT   50
#define NSDLGMULTI		      70
#define NSDLG_ALLER_A 	   100
#define NSDLG_AUCUN 	     200
#define NSDLG_ERREUR 	     201

//// Messages spécifiques aux lésions multiples
//
#define NSDLGMULTI_PREC	   NSDLGMULTI+1   // Lésion précédente
#define NSDLGMULTI_SUIV	   NSDLGMULTI+2   // Lésion suivante
#define NSDLGMULTI_FIN	   NSDLGMULTI+3   // Fin
#define NSDLGMULTI_SUPP	   NSDLGMULTI+4   // Suppression de la lésion
#define NSDLGMULTI_NEW	   NSDLGMULTI+5   // Nouvelle lésion
#define NSDLGMULTI_DERN	   NSDLGMULTI+6   // Début des messages spécifiques

#endif
